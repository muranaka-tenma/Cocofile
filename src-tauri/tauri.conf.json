{
  "productName": "CocoFile",
  "version": "0.1.14",
  "identifier": "com.cocofile.app",
  "build": {
    "beforeDevCommand": "cd ../frontend && npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "CocoFile",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "binaries/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "CocoFile",
    "copyright": "Copyright (c) 2025 CocoFile",
    "category": "Utility",
    "shortDescription": "ファイル管理アシスタント",
    "longDescription": "CocoFile は、ローカルファイルを全文検索・整理するデスクトップアプリケーションです。PDF、Excel、Word、PowerPointなどのファイル内容を高速検索できます。",
    "linux": {
      "deb": {
        "depends": [
          "libc6 (>= 2.31)",
          "libgtk-3-0 (>= 3.24)",
          "libwebkit2gtk-4.0-37 (>= 2.32)",
          "libsqlite3-0 (>= 3.35)"
        ]
      }
    }
  }
}
